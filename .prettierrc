{
	"printWidth": 120,
	"arrowParens": "avoid",
	"bracketSameLine": false,
	"bracketSpacing": true,
	"jsxSingleQuote": true,

	"quoteProps": "as-needed",
	"semi": false,
	"singleQuote": true,
	"tabWidth": 2,
	"trailingComma": "none",
	"useTabs": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports"],

	"importOrder": ["react", "^@core/(.*)$", "^@server/(.*)$", "^@ui/(.*)$", "^[./]", "react-icons"],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
