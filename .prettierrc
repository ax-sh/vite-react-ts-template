{
	"printWidth": 120,
	"arrowParens": "avoid",
	"bracketSameLine": false,
	"bracketSpacing": true,
	"jsxSingleQuote": true,

	"quoteProps": "as-needed",
	"semi": false,
	"singleQuote": true,
	"tabWidth": 2,
	"trailingComma": "none",
	"useTabs": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports"],

	"importOrder": [
		"react",
		"^@core/(.*)$",
		"^@server/(.*)$",
		"^@ui/(.*)$",
		"^[./]",
		"^react-icons",
		"^@testing-library/jest-dom/vitest",
		"^@tanstack/react-query",
		"^msw"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"endOfLine": "lf"
}
